FROM metabrainz/python:2.7

# Installing dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
                       build-essential \
                       libyaml-dev \
                       libfftw3-dev \
                       libavcodec-dev \
                       libavformat-dev \
                       python-numpy-dev \
                       python-numpy \
                       git \
                       libsamplerate0-dev \
                       libtag1-dev \
                       libqt4-dev \
                       swig2.0 \
                       pkg-config \
                       libpq-dev \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir /eval
WORKDIR /eval

# PostgreSQL password
ENV PGPASSWORD "acousticbrainz"

# Gaia
# See https://github.com/MTG/gaia
RUN git clone https://github.com/MTG/gaia /tmp/gaia \
    && cd /tmp/gaia \
    && ./waf configure --with-python-bindings \
    && ./waf \
    && ./waf install

# Python dependencies
COPY requirements.txt /eval/requirements.txt
RUN mkdir /eval/docs/
COPY docs/requirements.txt /eval/docs/requirements.txt
RUN pip install -r requirements.txt

# Install Dockerize
ENV DOCKERIZE_VERSION v0.2.0
RUN wget https://github.com/jwilder/dockerize/releases/download/$DOCKERIZE_VERSION/dockerize-linux-amd64-$DOCKERIZE_VERSION.tar.gz \
    && tar -C /usr/local/bin -xzvf dockerize-linux-amd64-$DOCKERIZE_VERSION.tar.gz

COPY ./db /eval/db
COPY ./default_config.py /eval/default_config.py
WORKDIR /eval/dataset_eval/
CMD dockerize --wait tcp://db:5432 -timeout 60s \
    && python evaluate.py
